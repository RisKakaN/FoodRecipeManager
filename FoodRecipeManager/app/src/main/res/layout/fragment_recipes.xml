<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutRecipesFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextColor="@color/textGray"
        app:tabIndicatorColor="@color/backgroundLight"
        app:tabIndicatorHeight="4dp"
        app:tabMode="scrollable"
        app:tabBackground="@color/backgroundDarkest"
        app:tabSelectedTextColor="@color/textOnDark"
        app:tabIconTint="@android:color/holo_green_dark"
        app:tabRippleColor="@android:color/holo_green_dark" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerRecipesFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>