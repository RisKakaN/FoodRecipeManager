<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:background="@color/backgroundDark"
    android:orientation="vertical">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonCaptureHandlePhotoDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/backgroundLightDark"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/recipe_handle_photo_dialog_capture"
        android:textColor="@color/textOnDark"
        android:textSize="16sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonGalleryHandlePhotoDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonCaptureHandlePhotoDialog"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/backgroundLightDark"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/recipe_handle_photo_dialog_gallery"
        android:textColor="@color/textOnDark"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/relativeLayoutRemoveHandlePhotoDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonGalleryHandlePhotoDialog"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonRemoveHandlePhotoDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/backgroundLightDark"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/recipe_handle_photo_dialog_remove"
            android:textColor="@color/textOnDark"
            android:textSize="16sp" />
    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonCancelHandlePhotoDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayoutRemoveHandlePhotoDialog"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/backgroundLightDark"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/cancel_label"
        android:textColor="@color/textOnDark"
        android:textSize="16sp" />

</RelativeLayout>