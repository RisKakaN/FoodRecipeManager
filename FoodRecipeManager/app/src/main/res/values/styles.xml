<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/backgroundDarkest</item>
        <item name="colorPrimaryDark">@color/backgroundDarkest</item>
        <item name="colorAccent">@color/backgroundLight</item>
        <item name="android:textColorPrimary">@color/textOnDark</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right_activity</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left_activity</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left_activity</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right_activity</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="DividerHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/backgroundLightDark</item>
    </style>

    <style name="DividerVertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/backgroundLightDark</item>
    </style>

</resources>
